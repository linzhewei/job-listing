<div class="col-md-10 col-md-offset-2">
<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn btn-default") %>
</div>

<br>

<table class="table table-boldered">
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, admin_job_path(job))%>
    </td>

    <td>
      <%= job.created_at %>
    </td>
    <td>
      <div class="pull-right">
      <%= link_to("Edit",edit_admin_job_path(job),class:"btn btn-primary") %>
      <%= link_to("Destroy", admin_job_path(job),class:"btn btn-danger", :method => :delete, :data => { :confirm => "Are you sure?"}) %>
    </td>


  </tr>
  <% end %>
</table>
